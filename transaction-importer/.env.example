# Required: Master wallet address that funds requester wallets
MASTER_WALLET_ADDRESS=0x...

# Required: Etherscan API key (get from https://etherscan.io/myapikey)
ETHERSCAN_API_KEY=your_api_key_here

# Chain ID (137 = Polygon, 1 = Ethereum mainnet)
ETHERSCAN_CHAIN_ID=137

# GLM token contract address on Polygon (default is correct for Polygon)
# GLM_CONTRACT_ADDRESS=0x0B220b82F3eA3B7F6d9A1D8ab58930C064A2b5Bf

# Etherscan rate limit (calls per second, free tier = 3)
ETHERSCAN_RATE_LIMIT=3

# PostgreSQL connection
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=statsdb
POSTGRES_USER=devuser
POSTGRES_PASSWORD=devpass

# Initial lookback period in days (default: 90)
INITIAL_LOOKBACK_DAYS=90

# Log level (debug, info, warn, error)
LOG_LEVEL=info
