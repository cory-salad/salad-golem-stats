# Backend Environment Configuration

# CORS - comma-separated list of allowed origins
FRONTEND_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# PostgreSQL
POSTGRES_USER=devuser
POSTGRES_PASSWORD=devpass
POSTGRES_HOST=localhost
POSTGRES_DB=statsdb
POSTGRES_PORT=5432

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Cache TTL (in seconds)
CACHE_TTL_STATS=3600       # 1 hour for aggregated stats
CACHE_TTL_TRENDS=3600      # 1 hour for trend data
CACHE_TTL_CITY=86400       # 24 hours for city data
CACHE_TTL_TRANSACTIONS=60  # 1 minute for live transactions
CACHE_TTL_GPU=3600         # 1 hour for GPU stats
